@page
@using Microsoft.VisualStudio.TextTemplating
@model RazorPages.Pages.Products.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.ImageData)
        </dt>
        <dd class="col-sm-10">
            <img src="@Url.Content("~/uploads/images/" + Model.Product.ImageData)" alt="Product picture"  width="350px"/>
            @*@Html.DisplayFor(model => model.Product.ImageFile)*@
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Type)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Type)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Producer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Producer.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Ph)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Ph)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Mineralization)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Mineralization)
        </dd>
        <dt class="col-sm-2">
            Cations list:
        </dt>
        <dd class="col-sm-10">
            @foreach (var item in Model.Cations)
            {
                <br/>
                @Html.DisplayFor(modelItem => item)
            }
        </dd>
        <dt class="col-sm-2">
            Anions list:
        </dt>
        <dd class="col-sm-10">
            @foreach (var item in Model.Anions)
            {
                <br/>
                @Html.DisplayFor(modelItem => item)
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.PackingType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.PackingType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Volume)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Volume)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.AvailableAmount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.AvailableAmount)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Product?.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
